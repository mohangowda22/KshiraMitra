<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6002764"
        android:orientation="horizontal"
        android:padding="10dp"
        android:textAlignment="center">

        <TextView
            android:id="@+id/fdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date : "
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fdatetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/fdate"

            android:text="20/03/2020"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/ftime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fdate"
            android:text="Time : "
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ftimetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fdatetxt"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/ftime"
            android:text="05:47 PM"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/snf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ftime"
            android:text="SNF/FAT/RATE : "
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/snftxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ftimetxt"
            android:layout_toEndOf="@+id/snf"
            android:text="22.5% / 44 / 24%"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/qut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/snf"
            android:text="Qty / Amt : "
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/snftxt"
            android:layout_toEndOf="@+id/qut"
            android:text=" 22.5% / $44 "
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qut"
            android:text="Payment Status : "
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statustxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quttxt"
            android:layout_toEndOf="@+id/status"
            android:text=" Pending "
            android:textColor="@color/white"
            android:textSize="14dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>